{
	"name": "cf-sveltekit-drizzle",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "pnpm run build && wrangler pages dev",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"create-test-db": "touch src/lib/server/db/test/test.db && NODE_ENV=test drizzle-kit push --force",
		"rm-test-db": "rm -rf src/lib/server/db/test/test.db",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"test:unit:ui": "vitest --ui",
		"test": "pnpm test:unit -- --run && pnpm test:e2e",
		"test:e2e": "playwright test",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply my-database --local && drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:seed:local": "curl http://localhost:5173/api/seed",
		"deploy:db": "wrangler d1 migrations apply my-database --remote",
		"deploy:pages": "pnpm run build && wrangler pages deploy",
		"cf-typegen": "wrangler types && mv worker-configuration.d.ts src/"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250525.0",
		"@playwright/test": "^1.52.0",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-cloudflare": "^7.0.3",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/better-sqlite3": "^7.6.13",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.15.21",
		"@vitest/browser": "^3.1.4",
		"@vitest/ui": "3.1.4",
		"better-sqlite3": "^11.10.0",
		"drizzle-kit": "^0.31.1",
		"eslint": "^9.27.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.0",
		"globals": "^16.2.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"stylelint": "^16.19.1",
		"stylelint-config-idiomatic-order": "^10.0.0",
		"stylelint-config-standard-scss": "^15.0.1",
		"svelte": "^5.33.4",
		"svelte-check": "^4.2.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.1",
		"vite": "^6.3.5",
		"vitest": "^3.1.4",
		"vitest-browser-svelte": "^0.1.0",
		"wrangler": "^4.16.1"
	},
	"dependencies": {
		"bcryptjs": "^3.0.2",
		"better-auth": "^1.2.8",
		"drizzle-orm": "^0.43.1"
	}
}
